# Modifier Key
set $mod Mod4

# Terminal
set $term foot

# Primary monitor (e.g., eDP-1)
output eDP-1 mode 1920x1080 position 0 0
# Rotated monitor (DP-2)
output DP-2 mode 1200x1920 position 1920 -600 transform 270

# Caps Lock Escape
input * xkb_options caps:escape

# Start XDG autostart .desktop files using dex.
exec --no-startup-id dex --autostart --environment sway

# Screen locking: Use swayidle and swaylock for Wayland.
exec --no-startup-id swayidle -w \
    timeout 300 'swaylock -f' \
    before-sleep 'swaylock -f'

# Network Manager
exec --no-startup-id nm-applet

# Background
output * bg #1e1e2e solid_color

# Font for window titles and bar.
font pango:MesloLGS Nerd Font 10.5

# Borders
default_border none
default_floating_border none

# Keyboard Shortcuts

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+q exec --no-startup-id swaylock -f 

set $menu wofi --show run | xargs swaymsg exec --
bindsym $mod+d exec wofi --show drun --conf ~/.config/wofi/style.css

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right 

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+a workspace prev_on_output
bindsym $mod+f workspace next_on_output

set $mode_monitor "monitor mode"
bindsym $mod+m mode $mode_monitor

mode $mode_monitor {
  bindsym h focus output left
  bindsym l focus output right
 
  bindsym Shift+h move workspace to output left
  bindsym Shift+l move workspace to output right

  bindsym Escape mode "default"
}

bindsym $mod+g split h
bindsym $mod+v split v

bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Colors

bar {
  colors {
    background #1e1e2e
    statusline #1e1e2e
    separator #a6adc8

    focused_workspace #cdd6f4 #1e1e2e #cdd6f4
    inactive_workspace #1e1e2e #1e1e2e #89b4fa
    urgent_workspace #f38ba8 #f38ba8 #1e1e2e
  }
  tray_output none
}

client.focused #b4befe #1e1e2e #cdd6f4 #1e1e2e #a6adc8
client.focused_inactive #1e1e2e #1e1e2e #89b4fa #666666 #a6adc8
client.unfocused #1e1e2e #1e1e2e #a6adc8 #1e1e2e #a6adc8
client.urgent #1e1e2e #a6adc8 #1e1e2e #1e1e2e #1e1e2e
client.placeholder #1e1e2e #666666 #a6adc8 #1e1e2e #1e1e2e

# Volume controls with wob (using wpctl)
# wpctl syntax: set-volume @DEFAULT_AUDIO_SINK@ <value>

# Toggle Mute
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- 
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ --limit 1.0

# Brightness
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && ~/bin/brightness-wob.sh
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && ~/bin/brightness-wob.sh

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Trackball
input "1133:50184:Logitech_USB_Trackball" {
    scroll_method on_button_down
    scroll_button 273
}

exec_always --no-startup-id waybar

include /etc/sway/config.d/*
